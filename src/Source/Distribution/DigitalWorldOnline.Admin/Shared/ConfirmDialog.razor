@using MudBlazor

<MudDialog>
    <DialogContent>
        <!-- ✅ Title göster (varsa) -->
        @if (!string.IsNullOrEmpty(Title))
        {
            <MudText Typo="Typo.h6" Class="mb-4">
                <b>@Title</b>
            </MudText>
        }

        <!-- Message veya ContentText göster -->
        <MudText Typo="Typo.body1">
            @(!string.IsNullOrEmpty(ContentText) ? ContentText : Message)
        </MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@(() => MudDialog.Cancel())">
            Cancel
        </MudButton>
        <MudButton Color="@Color" Variant="Variant.Filled" OnClick="@(() => MudDialog.Close(true))">
            @ButtonText
        </MudButton>
    </DialogActions>
</MudDialog>