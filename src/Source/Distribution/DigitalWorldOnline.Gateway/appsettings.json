{
  "GatewayConfig": {
    "GatewayIP": "127.0.0.1",
    "GatewayPort": 8074,
    "Applications": [
      {
        "Name": "AuthenticationServer",
        "Type": "Auth",
        "IP": "127.0.0.1",
        "Port": 8075
      },
      {
        "Name": "CharacterServer",
        "Type": "Character",
        "IP": "127.0.0.1",
        "Port": 8076
      },
      {
        "Name": "GameServer",
        "Type": "Game",
        "IP": "127.0.0.1",
        "Port": 8077
      }
    ]
  },
  "Log": {
    "DebugRepository": "logs/Debug/GatewayServer-.log",
    "WarningRepository": "logs/Warning/GatewayServer-.log",
    "InformationRepository": "logs/Information/GatewayServer-.log",
    "ErrorRepository": "logs/Error/GatewayServer-.log",
    "VerboseRepository": "logs/Verbose/GatewayServer-.log"
  },
  "DetailedErrors": true,
  "Logging": {
    "LogLevel": {
      "Default": "Verbose",
      "Microsoft": "Verbose",
      "Microsoft.Hosting.Lifetime": "Verbose"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "RollingFile",
        "Args": {
          "pathFormat": "logs/Game/Verbose",
          "restrictedToMinimumLevel": "Verbose",
          "retainedFileCountLimit": 10
        }
      },
      {
        "Name": "RollingFile",
        "Args": {
          "pathFormat": "logs/Game/Debug",
          "restrictedToMinimumLevel": "Debug",
          "retainedFileCountLimit": 5
        }
      }
    ]
  }
}
